
@{
    ViewBag.Title = "Delete Role from User";
}

<h2>Delete Role from User</h2>
@{
    <form asp-controller="Roles" asp-action="DeleteUser" method="post" class="form-horizontal" role="form">
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-md-10">
                    <label for="Id" class="col-md-2 control-label">Username: </label>
                    @Html.DropDownList("Id", (IEnumerable<SelectListItem>)ViewBag.Users, "Select ...", new {@class ="form-control"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label for="Id" class="col-md-2 control-label">Role Name: </label>
                    @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>) ViewBag.Roles, "Select ...", new {@class ="form-control"})
                </div>
            </div>
        <input type="submit" class="btn btn-default" value="Delete" />
    </form>
}
