@model IEnumerable<DiplomaWebSite.Models.Option>

@{
    ViewBag.Title = "Index";
}

<h2>Options</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.OptionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OptionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OptionId">Delete</a>
            </td>
        </tr>
    }

</table>
